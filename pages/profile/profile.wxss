.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.profile-content {
  position: relative;
  top: 20rpx;
  width: 100%;
}

.profile-content button {
  margin-top: 10rpx;
  font-size: 14px;
  text-align: left;
  width: 100%;
  background-color: transparent;
  border-bottom: 1px #ccc;
  outline: none;
}

.profile-content button::after {
  border: 0;
}

.profile-content view {
  margin: 10rpx 4%;
  width: 92%;
  height: 1px;
  background-color: #ccc;
}

.profile-content button image {
  position: relative;
  top: 20rpx;
  left: 5rpx;
  width: 60rpx;
  height: 60rpx;
}

.profile-content button text {
  position: relative;
  left: 30rpx;
}

.pro-info {
  text-align: center;
  position: absolute;
  bottom: 30rpx;
  color: #ccc;
  font-size: 30rpx;
}